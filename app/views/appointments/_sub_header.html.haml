.sub-header
  - if edit_or_new_page?(@appointment)
    %a.appointment-save{ href: "#" }
      %i.icon-save.icon-2x
      = t('.appointment_save')
    %a.appointment-danger{href: "#{appointments_path}"}
      %i.icon-remove-sign.icon-2x
      = t('.cancel')
    - if current_page?(action: 'edit', id: @appointment.id || 0)
      %a.appointment-remove{href: "#"}
        %i.icon-remove.icon-2x
        = t('.remove')
  - elsif show_page?(@appointment)
    %a.appointment-save{ href: "#{edit_appointment_path(@appointment)}" }
      %i.icon-edit.icon-2x
      = t('.appointment_edit')
    %a.appointment-print{href: "#"}
      %i.icon-print.icon-2x
      = t('.print')
  - else
    %a.appointment-new{ href: "#{new_appointment_path}" }
      %i.icon-plus-sign.icon-2x
      = t('.new')
    - if index_page?(@appointment, "appointments")
      %a.appointment-today{href: "#"}
        %i.icon-calendar.icon-2x
        = t('.today')
      %a.appointment-week{href: "#"}
        %i.icon-calendar.icon-2x
        = t('.week')
      %a.appointment-month{href: "#"}
        %i.icon-calendar.icon-2x
        = t('.month')
      %a.appointment-all{href: "#"}
        %i.icon-calendar.icon-2x
        = t('.all')
    %a.appointment-print{href: "#"}
      %i.icon-print.icon-2x
      = t('.print')

