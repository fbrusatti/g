.form-appointments
  .left
    .input
      = label_tag t('activerecord.attributes.appointment.title')
      = text_area_tag nil,f.title, { class: "form-control",rows: "1", readonly: true}
    .input
      = label_tag t('activerecord.attributes.appointment.model')
      = label_tag f.model, nil, class: "pretty-input"
    .input
      = label_tag t('activerecord.attributes.appointment.customer')
      = link_customer(f.customer)
    .input
      = label_tag t('activerecord.attributes.appointment.property')
      = link_property(f.property)
    .input
      = label_tag t('activerecord.attributes.appointment.priority')
      = label_tag f.priority, nil, class: "pretty-input"
  .right
    .input
      = label_tag t('activerecord.attributes.appointment.user')
      = label_tag f.user.surname_with_name, nil, class: "pretty-input"
    .input
      = label_tag t('activerecord.attributes.appointment.status')
      = label_tag f.status, nil, class: "pretty-input"
    .input
      = label_tag t('activerecord.attributes.appointment.start_date')
      = label_tag print_date(f.start_date, :date_and_time), nil, class: "pretty-input"
    .input
      = label_tag t('activerecord.attributes.appointment.end_date')
      = label_tag print_date(f.end_date, :date_and_time), nil, class: "pretty-input"
    .input
      = label_tag t('activerecord.attributes.appointment.description')
      = text_area_tag nil,f.description, { class: "form-control",rows: "8", readonly: true}
