#appointment
  %table#appointments.display{"data-source" => appointments_url(format:"json")}
    %thead
      %tr
        %th
        %th= select_tag nil,
                        options_from_collection_for_select(User.all, "id", "surname_with_name"),
                        {include_blank: true ,class: "pretty-input-data-table"}
        %th= select_tag nil, options_for_select(models), {include_blank: true ,class: "pretty-input-data-table"}
        %th= select_tag nil, options_for_select(appointment_status), {include_blank: true ,class: "pretty-input-data-table"}
        %th= text_field_tag nil, nil,class: "pretty-input-data-table",
                            type: "text",
                            name: "daterange",
                            placeholder: t('.last_date')
        %th= select_tag nil, options_for_select((1..5).to_a), {include_blank: true ,class: "pretty-input-data-table"}
        %th
        %th
      %tr
        %th=t('.title_column')
        %th=t('.user')
        %th=t('.model')
        %th=t('.status')
        %th=t('.start_date')
        %th=t('.priority')
        %th=t('.customer')
        %th=t('.property')
    %tbody
    %tfoot
