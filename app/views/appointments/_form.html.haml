.form-appointments
  .left
    .input
      = f.label :title
      = f.text_field :title , { class: "form-control" }
    .input
      = f.label :model
      = f.select :model,models, {:include_blank => false},{class: "form-control"}
    .input
      = f.label :customer
      .token_field
        = f.text_field :customer_tokens,"data-pre" => edit_customer, class: "form-control"
    .input
      = f.label :property
      .token_field
        = f.text_field :property_tokens,"data-pre" => edit_property, class: "form-control"
    .input
      = f.label :priority
      = f.select :priority, (1..5).to_a,{ include_blank: false },{ class: "form-control" }
  .right
    .input
      = f.label :user
      = f.collection_select :user_id, User.all, :id, :email,{include_blank:false},{class: "form-control"}
    .input
      = f.label :status
      = f.select :status,appointment_status, {:include_blank => false}, {class: "form-control"}
    .input
      = f.label :start_date
      .appointment_date_time_picker
        = f.text_field :start_date, class: "form-control"
        %span.input-group-addon.glyphicon.glyphicon-calendar
    .input
      = f.label :end_date
      .appointment_date_time_picker
        = f.text_field :end_date, {class: "form-control"}
        %span.input-group-addon.glyphicon.glyphicon-calendar
    .input
      = f.label :description
      = f.text_area :description, { class: "form-control",size: "100%x5"}
